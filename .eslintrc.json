{
  "env": {
    "browser": true,
    "es2021": true,
    "cypress/globals": true
  },
  "extends": ["plugin:react/recommended", "airbnb"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "cypress"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "max-len": ["error", { "code": 120 }],
    "no-console": "off",
    "react/jsx-props-no-spreading": "off"
  }
}
